{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}


{% block body %}
    <div class="page-title">
        <div class="text-center">
            <h3>Inscription<small></small></h3>
        </div>
    </div>
    <div class="container text-center">
        <div class="row justify-content-center">
            <form action="{{ path('fos_user_registration_register') }}" method="POST" class="col-md-6 well form-horizontal">
                <div class="form-group">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'control-label col-md-12 col-sm-12 col-xs-12'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control col-md-12 col-xs-12', 'placeholder': 'example: monthypython@gmail.com'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.username, null, {'label_attr': {'class': 'control-label col-md-12 col-sm-12 col-xs-12'}}) }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control col-md-12 col-xs-12', 'placeholder': 'example: KingPyMy'}}) }}
                    {{ form_errors(form.username) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'control-label col-md-12 col-sm-12 col-xs-12'}}) }}
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control col-md-12 col-xs-12', 'placeholder': 'Password'}}) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'control-label col-md-12 col-sm-12 col-xs-12'}}) }}
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control col-md-12 col-xs-12', 'placeholder': 'Password Confirmation'}}) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.firstName, null, {'label_attr': {'class': 'control-label col-md-12 col-sm-12 col-xs-12'}}) }}
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control col-md-12 col-xs-9', 'placeholder': 'example: Monthy'}}) }}
                    {{ form_errors(form.firstName) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.lastName, null, {'label_attr': {'class': 'control-label col-md-12 col-sm-12 col-xs-12'}}) }}
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control col-md-12 col-xs-12', 'placeholder': 'example: Python'}}) }}
                    {{ form_errors(form.lastName) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.age, null, {'label_attr': {'class': 'control-label col-md-12 col-sm-12 col-xs-12'}}) }}
                    {{ form_widget(form.age, {'attr': {'class': 'form-control', 'placeholder': 'example: 24'}}) }}
                    {{ form_errors(form.age) }}
                </div>

                {{ form_rest(form) }}

                <div class="form-group">
                    <div class="col-md-12">
                        <a href="{{ path('homePage') }}" class="btn btn-primary pull-left" >Home</a>
                        <input type="submit" value="{{ 'CrÃ©er'|trans }}" class="btn btn-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock body %}
