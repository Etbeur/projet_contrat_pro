{% block content %}

    <div class="page-title">
        <div class="title_left">
            <h3>User <small>Modification</small></h3>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">

            <div class="x_panel">
                <div class="x_content">
                    {{ form_start(edit_form, {attr: {'class': 'form-horizontal form-label-left', 'novalidate': 'novalidate'}}) }}

                    <div class="form-group">
                        {{ form_label(edit_form.email, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.email, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'placeholder': 'Email', 'readonly' : true}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.username, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.username, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'placeholder': 'Username', 'readonly' : true}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.plainPassword.first, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.plainPassword.first, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'placeholder': 'Password', 'readonly' : true}}) }}
                            {{ form_errors(edit_form.plainPassword.first) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.plainPassword.second, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.plainPassword.second, {'attr': {'class': 'form-control col-md-6 col-xs-12', 'placeholder': 'Password Confirmation', 'readonly' : true}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.firstName, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.firstName, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'placeholder': 'firstName', 'readonly' : true}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.lastName, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.lastName, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'placeholder': 'lastName', 'readonly' : true}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.age, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.age, {'attr': {'class': 'form-control', 'readonly' : true}}) }}
                        </div>
                    </div>

                    {{ form_widget(edit_form) }}

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('admin_user_index') }}" class="btn btn-primary pull-left" >Retour Ã  la liste</a>
                            <input type="submit" value="Modifier" class="btn btn-success" />
                        </div>
                    </div>

                    {{ form_end(edit_form) }}
                </div>
            </div>


            {{ form_start(delete_form) }}
            <a href="{{ path('admin_user_index') }}">
                <input class="btn btn-danger pull-right" type="submit" value="Supprimer">
            </a>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}