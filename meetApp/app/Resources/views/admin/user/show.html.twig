{% extends 'layout-admin.html.twig' %}

{% block content %}

    <div class="page-title">
        <div class="title_left">
            <h3>User <small>{{ user.Firstname }}</small></h3>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <table>
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>First</th>
                                <td>{{ user.firstName }}</td>
                            </tr>
                            <tr>
                                <th>Last</th>
                                <td>{{ user.lastName }}</td>
                            </tr>
                            <tr>
                                <th>Age</th>
                                <td>{{ user.age }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td>{{ user.image }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('admin_user_index') }}" class="btn btn-primary">Retour Ã  la liste</a>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-primary">Modifier</a>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" class="btn btn-danger pull-right">
            {{ form_end(delete_form) }}

        </div>
    </div>
{% endblock %}
