{% extends 'layout-admin.html.twig' %}

{% block content %}
    <div class="page-title">
        <div class="title_left">
            <h3>Commentary <small>{{ commentary.title }}</small></h3>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <table>
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ commentary.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ commentary.title }}</td>
                        </tr>
                        <tr>
                            <th>Content</th>
                            <td>{{ commentary.content }}</td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td>{{ commentary.date|date('d/m/y H:i:s') }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('admin_commentary_index') }}" class="btn btn-primary">Retour Ã  la liste</a>
                            <a href="{{ path('commentary_edit', { 'id': commentary.id }) }}" class="btn btn-primary">Modifier</a>
                        </div>
                    </div>
                </div>
            </div>

            {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" class="btn btn-danger pull-right">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
