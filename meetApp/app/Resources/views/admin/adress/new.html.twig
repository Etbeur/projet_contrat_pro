{% extends 'layout-admin.html.twig' %}

{% block content %}
    <div class="page-title">
        <div class="title_left">
            <h3>Adresses <small>Création</small></h3>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">

            <div class="x_panel">
                <div class="x_content">
                    {{ form_start(form, {attr: {'class': 'form-horizontal form-label-left'}}) }}

                    <div class="form-group">
                        {{ form_label(form.number, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.number, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'placeholder': 'example: 8'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.street, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.street, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'placeholder': 'example: Republic street'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.city, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.city, {'attr': {'class': 'form-control col-md-7 col-xs-9', 'placeholder': 'example: France'}}) }}
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('admin_adress_index') }}" class="btn btn-primary pull-left" >Retour à la liste</a>
                            <input type="submit" value="Créer" class="btn btn-success" />
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
