{% extends 'homePage.html.twig' %}

{% block content %}

    {% if is_granted('IS_AUTHENTICATED_FULLY') and not is_granted('ROLE_ADMIN') and event.creators == app.user %}
        <div class="text-center">
            <p><strong>Voulez-vous vraiment supprimer cet événement? Attention cette action est définitive</strong></p>
            {{ form_start(delete_form) }}
            <a href="{{ path('homePage') }}" class="btn btn-primary">Retour à la liste</a>
            <input type="submit" value="Supprimer" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>
    {% endif %}


{% endblock %}
