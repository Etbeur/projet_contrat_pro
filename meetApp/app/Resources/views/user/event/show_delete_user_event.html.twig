{% extends 'homePage.html.twig' %}

{% block content %}

    {% if not is_granted('ROLE_ADMIN') %}
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="text-center">
                    {{ form_start(edit_form, {attr: {'class': 'form-horizontal form-label-left', 'novalidate': 'novalidate', 'readonly': true}}) }}

                    <div class="form-group">
                        {{ form_label(edit_form.name, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control col-md-7 col-xs-12','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.place, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.place, {'attr': {'class': 'form-control col-md-7 col-xs-12','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.category, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.category, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.totalCapacity, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.totalCapacity, {'attr': {'class': 'form-control col-md-7 col-xs-12','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.date, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.date, {'attr': {'class': 'form-control col-md-7 col-xs-12','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>

                    {#{{ form_widget(edit_form) }}#}

                    <p><strong>Do you want to leave this event? You will particpate later if there is enough places.</strong></p>
                    <a href="{{ path('homePage') }}" class="btn btn-primary">Back to Home</a>
                    <input type="submit" value="Leave" class="btn btn-danger">

                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
