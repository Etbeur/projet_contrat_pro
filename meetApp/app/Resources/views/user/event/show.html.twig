{% extends 'layout-admin.html.twig' %}

{% block content %}
    <div class="page-title">
        <div class="title_left">
            <h3>Event <small>{{ event.name }}</small></h3>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <table>
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ event.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ event.name }}</td>
                            </tr>
                            <tr>
                                <th>Place</th>
                                <td>{{ event.place }}</td>
                            </tr>
                            <tr>
                                <th>Category</th>
                                <td>{{ event.category }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('admin_event_index') }}" class="btn btn-primary">Retour Ã  la liste</a>
                            <a href="{{ path('event_edit', { 'id': event.id }) }}" class="btn btn-primary">Modifier</a>
                        </div>
                    </div>
                </div>
            </div>

            {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" class="btn btn-danger pull-right">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
